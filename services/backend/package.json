{
    "name": "ufincs-backend",
    "description": "uFincs backend",
    "version": "0.0.1",
    "license": "MIT",
    "private": false,
    "main": "src",
    "directories": {
        "lib": "src",
        "config": "config/"
    },
    "scripts": {
        "test": "npm run jest",
        "lint": "NODE_PATH=src eslint 'src/**/*.[j|t]s'",
        "start": "NODE_PATH=src ts-node-dev --no-notify src/",
        "start:prod": "NODE_PATH=lib node lib/",
        "jest": "jest",
        "compile": "shx rm -rf lib/ && tsc",
        "tsc:check": "tsc --noEmit true",
        "prettier": "prettier --write src",
        "prettier:check": "prettier --check src",
        "ci": "npm-run-all --parallel lint tsc:check prettier:check test",
        "sequelize:init": "sequelize init",
        "sequelize:generate:model": "sequelize model:create",
        "sequelize:generate:migration": "sequelize migration:create",
        "sequelize:generate:seed": "sequelize seed:create",
        "db:create": "sequelize db:create",
        "db:drop": "sequelize db:drop",
        "db:seed": "NODE_PATH=lib sequelize db:seed:all",
        "db:migrate": "NODE_PATH=lib sequelize db:migrate",
        "db:retryable-migrate": "sh ./scripts/retryable-db-migrate.sh",
        "db:reset": "npm-run-all db:drop db:create db:migrate db:seed",
        "stripe:setup:account": "node ./scripts/setup-stripe-account.js",
        "stripe:create:webhook": "node ./scripts/create-stripe-webhook.js",
        "stripe:delete:webhook": "node ./scripts/delete-stripe-webhook.js"
    },
    "standard": {
        "env": [
            "jest"
        ],
        "ignore": []
    },
    "types": "lib/",
    "dependencies": {
        "@feathersjs/authentication": "^4.5.3",
        "@feathersjs/authentication-local": "^4.5.4",
        "@feathersjs/configuration": "^4.5.3",
        "@feathersjs/errors": "^4.5.3",
        "@feathersjs/express": "^4.5.4",
        "@feathersjs/feathers": "^4.5.3",
        "@feathersjs/transport-commons": "^4.5.3",
        "@slack/webhook": "6.0.0",
        "@types/express-rate-limit": "^5.1.0",
        "@types/morgan": "^1.9.0",
        "@types/nodemailer": "^6.4.0",
        "@types/nodemailer-mailgun-transport": "^1.4.1",
        "@types/pg": "^7.14.4",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "express-rate-limit": "^5.1.3",
        "feathers-authentication-management": "^3.0.1",
        "feathers-hooks-common": "^5.0.3",
        "feathers-sequelize": "^6.2.0",
        "helmet": "^3.22.0",
        "morgan": "^1.10.0",
        "nodemailer": "6.4.18",
        "nodemailer-mailgun-transport": "2.0.3",
        "pg": "^8.2.1",
        "sequelize": "^5.21.11",
        "sequelize-cli": "^5.5.1",
        "stripe": "8.128.0",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@types/bluebird": "^3.5.32",
        "@types/compression": "^1.7.0",
        "@types/cors": "^2.8.6",
        "@types/helmet": "0.0.47",
        "@types/jest": "^25.2.3",
        "@types/jsonwebtoken": "^8.5.0",
        "@types/serve-favicon": "^2.5.0",
        "@types/validator": "^10.11.3",
        "@typescript-eslint/eslint-plugin": "4.8.2",
        "@typescript-eslint/parser": "4.8.2",
        "eslint": "^7.1.0",
        "eslint-plugin-import": "^2.20.2",
        "jest": "^26.0.1",
        "nodemon": "^2.0.4",
        "npm-run-all": "^4.1.5",
        "prettier": "2.3.0",
        "prompts": "^2.4.0",
        "shx": "^0.3.2",
        "ts-jest": "26.4.4",
        "ts-node-dev": "1.0.0",
        "typescript": "4.1.2"
    }
}
